<%if @article.reporter_name == current_user.name && @article.reporters.first.publication == current_user.publication%>
<div id="edit_button"><a href="<%=edit_article_path%>">Edit this article</a></div>
<br>
<%end%>

<div id="article_header">
<h1 id="article_headline"><a href=<%=@article.url%>><%=@article.headline%></a></h1>
  <div id="sub_head">
  <em>By <a href=<%=reporter_path(@article.reporter_id)%>><%=@article.reporter_name%></a>
    | <%=@article.date%></em>
  </div>
</div>


  <%@article.impacts.distinct.each do |impact|%>
