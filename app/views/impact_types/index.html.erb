<% if current_user%>
<h1 class="headline_view">Add an Impact</h1>

<div class="impact_bubbles small cover_page">
  <%@impact_types.sort.each do |impact_type|%>
      <a href=<%=impact_selector_id_path(impact_type.id)%>>
          <div class="impact_package">
            <div class="help-tip">
            	<p><%=impact_type.description%></p>
            </div>
            <div class="impact_bubble small">
              <img class="icon" src=<%=impact_type.image%>></img>
              <div class="impact_bubble_text">
                <h4><%=impact_type.name%></h4>
              </div>
            </div>
          </div>
        </a>
    <%end%>
</div>

<%else%>

<div class="fullscreen-bg">
    <video loop muted autoplay poster="img/videoframe.jpg" class="fullscreen-bg__video">
        <source src="/assets/it_lohud.mp4" type="video/webm">
        <source src="/assets/it_lohud.mp4" type="video/mp4">
        <source src="/assets/it_lohud.mp4" type="video/ogg">
    </video>
</div>
<div id="opener_container">
  <div id="opener_contents">
    <h1 class="clip-text clip-text-one" id="opener_header">Impact Tracker</h1>
    <h3 class="opener_text" id="opener_subhead">Journalism is about more than page views and clicks.
      <br>Measure the real-world impact of your work.
    </h3>
    <a href="<%=new_user_path%>"><button type="button" class="button big blue" id="first_button">Sign Up</button></a>
    <a href="<%=new_session_path%>"><button type="button" class="button big green">Sign In</button></a>
  </div>
</div>

<%end%>
