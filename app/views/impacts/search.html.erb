<nav class="navbar navbar-inverse">
  <a class="navbar-brand" href="/">Home</a>
    <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <%= form_tag "/search", :method => 'get', class: "navbar-form navbar-left" do %>
