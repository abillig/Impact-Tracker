<select >
<%@articles.each do |location|%>

<option><a href=http://localhost:3000<%=reporter_path(location.id)%>><%= location.headline %></a></option>
<%end%>
</select>




<%@articles.each do |article|%>
<ul><h3><a href=<%=article_path(article.id)%>><%=article.headline%></a></h3>
  <%article.impacts.distinct.each do |impact|%>
  <li><strong><%=impact.name%></strong><br></li>
  <%end%>
</ul>
<%end%>


