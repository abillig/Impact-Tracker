<!DOCTYPE html>
<html>
  <head>
    <title>ImpactTracker</title>
    <%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
  <%if current_user%>
  <img id="pub_logo" src="http://www.gannett-cdn.com/sites/<%=current_user.publication.gannett_name%>/images/favicon.png"/>
  <%end%>
  <h4 id="logo">Impact Tracker</h4>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">

        <!-- <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button> -->
     <a class="navbar-brand" href="<%= root_url %>">Home</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
    <% if current_user %>
    <li><%= link_to 'Articles', articles_path%></li>
    <li><%= link_to 'Impacts', impact_type_path((1..ImpactType.all.length).to_a.sample)%></li>
    
       </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><div style="font-size:20px; color:#ce3936; margin-top: -13%">+</div></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'New Article', new_article_path%></li>
          <li><%= link_to 'New Impact', impact_types_path%></li>
          <li><%= link_to 'New Project', new_project_path%></li>
        </ul>
      </li>
        <li class="dropdown">
          <a href="<%= profile_path %>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'My Profile', profile_path%></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to 'Log Out', '/log_out'%></li>
          </ul>
        </li>
      </ul>
      <% else %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign In", new_session_path %></li>
        <li><%= link_to "Sign Up", new_user_path %></li>
      </ul>
      <%end%>


    </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>



    <%= yield %>
    </div>
  </body>
</html>
